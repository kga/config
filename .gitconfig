[user]
    name  = Wataru TOYA
    email = watrty@gmail.com
[core]
    excludesfile = /Users/wataru/.gitignore
[alias]
    st  = status
    lop = log -p
    ca  = commit -av
    ci  = commit -v
    ap  = add -p
    br  = branch
    co  = checkout
    df  = diff
    pr  = pull --rebase
    gp  = grep -n --color
[color]
    diff   = auto
    branch = auto
    status = auto
    interactive = auto
[color "branch"]
    current = red
    local   = yellow
    remote  = green
[color "status"]
    added     = yellow
    changed   = green
    untracked = cyan
[color "diff"]
    commit = black white bold
    meta   = blue
    frag   = black
    old    = red
    new    = green
[i18n]
    commitencoding = utf-8
